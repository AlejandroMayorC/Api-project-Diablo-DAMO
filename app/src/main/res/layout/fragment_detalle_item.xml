<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen del item -->
    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- ScrollView para Detalles del Item -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TextView para el nombre del item -->
            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Item"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <!-- TextView para RequiredLevel -->
            <TextView
                android:id="@+id/textViewItemRequiredLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para AccountBound -->
            <TextView
                android:id="@+id/textViewItemAccountBound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para TypeName -->
            <TextView
                android:id="@+id/textViewItemTypeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para Damage -->
            <TextView
                android:id="@+id/textViewItemDamage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para DPS -->
            <TextView
                android:id="@+id/textViewItemDps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para Color -->
            <TextView
                android:id="@+id/textViewItemColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para IsSeasonRequiredToDrop -->
            <TextView
                android:id="@+id/textViewItemIsSeasonRequiredToDrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para Slots -->
            <TextView
                android:id="@+id/textViewItemSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para ItemType TwoHanded -->
            <TextView
                android:id="@+id/textViewItemTwoHanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <!-- TextView para ItemType ID -->
            <TextView
                android:id="@+id/textViewItemTypeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
