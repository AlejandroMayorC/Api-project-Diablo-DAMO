<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewIcono"
        android:layout_width="89dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="221dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:text="Nombre del Personaje"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewIcono"
        app:layout_constraintStart_toEndOf="@id/imageViewIcono"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/Btn_preferits_character"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imageViewIcono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625"
        app:srcCompat="@drawable/btn_star_big_off"
        tools:srcCompat="@drawable/btn_star_big_off" />

</androidx.constraintlayout.widget.ConstraintLayout>
